<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="TextAppearance.PYDroid.Notification" parent="@android:style/TextAppearance.Material.Notification.Line2">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.PYDroid.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title"/>

  <style name="Style.PYDroid.DropShadow" tools:keep="@style/Style_PYDroid_DropShadow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">8dp</item>
    <item name="android:elevation">8dp</item>
  </style>

  <style name="Style.PYDroid.DropShadow.Up" tools:keep="@style/Style_PYDroid_DropShadow_Up">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">4dp</item>
    <item name="android:foreground">@drawable/shadow_up</item>
    <item name="android:background">@drawable/shadow_up</item>
  </style>

</resources>
